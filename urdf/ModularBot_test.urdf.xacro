<?xml version="1.0" ?>
<robot name="ModularBot" xmlns:xacro="http://ros.org/wiki/xacro">
   <xacro:property name="width" value="0.1"/>
   <xacro:property name="len1" value="0.4"/>
   <xacro:property name="len2" value="0.6"/>
   <xacro:property name="len3" value="0.8"/>
   <material name="blue">
      <color rgba="0 0 0.8 1"/>
   </material>
   <material name="black">
      <color rgba="0 0 0 1"/>
   </material>
   <material name="white">
      <color rgba="1 1 1 1"/>
   </material>
   <xacro:macro name="default_inertial" params="mass">
      <inertial>
         <mass value="${mass}"/>
         <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
      </inertial>
   </xacro:macro>
   <link name="base_link"/>
   <link name="world"/>
   <joint name="world" type="fixed">
      <parent link="world"/>
      <child link="base_link"/>
   </joint>
   <link name="link_0">
      <visual>
         <origin rpy="0 0 0" xyz="0 0 ${len1/2}"/>
         <geometry>
            <cylinder length="${len1}" radius="${width}"/>
         </geometry>
         <material name="black"/>
      </visual>
      <collision>
         <geometry>
            <cylinder length="${len1}" radius="${width}"/>
         </geometry>
      </collision>
      <xacro:default_inertial mass="10"/>
   </link>
   <joint name="fixed" type="fixed">
      <parent link="base_link"/>
      <child link="link_0"/>
   </joint>
   <xacro:macro name="add_link" params="suffix size_y size_z">
      <link name="link_${suffix}">
         <visual>
            <origin rpy="0 0 0" xyz="0 0 ${size_z/2}"/>
            <geometry>
               <box size="${width} ${width} ${size_z}"/>
            </geometry>
         </visual>
         <visual>
            <origin rpy="0 0 0" xyz="0 ${size_y/2} ${size_z}"/>
            <geometry>
               <box size="${width} ${size_y} ${width}"/>
            </geometry>
         </visual>
         <collision>
            <origin rpy="0 0 0" xyz="0 0 ${size_z/2}"/>
            <geometry>
               <box size="${width} ${width} ${size_z}"/>
            </geometry>
         </collision>
         <xacro:default_inertial mass="1"/>
         <collision>
            <origin rpy="0 0 0" xyz="0 ${size_y/2} ${size_z}"/>
            <geometry>
               <box size="${width} ${size_y} ${width}"/>
            </geometry>
         </collision>
      </link>
   </xacro:macro>
   <xacro:macro name="add_fixed_joint" params="suffix x y z roll pitch yaw">
      <joint name="fixed_joint_${suffix}_bis" type="fixed">
         <axis rpy="0 0 0" xyz="0 0 1"/>
         <parent link="link_${suffix}"/>
         <child link="link_${suffix}_bis"/>
         <origin rpy="${roll} ${pitch} ${yaw}" xyz="${x} ${y} ${z}"/>
      </joint>
   </xacro:macro>
   <xacro:macro name="add_joint" params="suffix x y z roll pitch yaw upper_lim lower_lim effort velocity">
      <joint name="joint_${suffix}" type="revolute">
         <axis rpy="0 0 0" xyz="0 0 1"/>
         <parent link="link_stator_joint_${suffix}"/>
         <child link="link_${suffix}"/>
         <origin rpy="${roll} ${pitch} ${yaw}" xyz="${x} ${y} ${z}"/>
         <limit effort="${effort}" lower="${lower_lim}" upper="${upper_lim}" velocity="${velocity}"/>
      </joint>
   </xacro:macro>
   <xacro:macro name="add_joint_stator" params="suffix size_y size_z">
      <link name="link_stator_joint_${suffix}">
         <visual>
            <origin rpy="0 0 0" xyz="0 0 ${size_z/2}"/>
            <geometry>
               <cylinder length="${size_z}" radius="${width}"/>
            </geometry>
            <material name="blue"/>
         </visual>
         <collision>
            <origin rpy="0 0 0" xyz="0 0 ${size_z/2}"/>
            <geometry>
               <cylinder length="${size_z}" radius="${width}"/>
            </geometry>
         </collision>
         <xacro:default_inertial mass="1"/>
      </link>
   </xacro:macro>
   <xacro:macro name="add_fixed_joint_stator" params="suffix suffix_bis x y z roll pitch yaw">
      <joint name="fixed_joint_${suffix_bis}_bis" type="fixed">
         <axis rpy="0 0 0" xyz="0 0 1"/>
         <parent link="link_${suffix_bis}"/>
         <child link="link_stator_joint_${suffix}"/>
         <origin rpy="${roll} ${pitch} ${yaw}" xyz="${x} ${y} ${z}"/>
      </joint>
   </xacro:macro>
   <xacro:add_fixed_joint_stator pitch="-0.0" roll="0.0" suffix="1" suffix_bis="0" x="0.0" y="0.0" yaw="0.0" z="0.4"/>
   <xacro:add_joint_stator size_y="0" size_z="0.2" suffix="1"/>
   <xacro:add_joint effort="35" lower_lim="-3.14" pitch="-0.0" roll="0.0" suffix="1" upper_lim="3.14" velocity="5.7" x="0.0" y="0.0" yaw="0.0" z="0.2"/>
   <xacro:add_link size_y="0.2" size_z="0.2" suffix="1"/>
   <xacro:add_fixed_joint_stator pitch="-0.0" roll="-1.57" suffix="2" suffix_bis="1" x="0.0" y="0.199999936586" yaw="0.0" z="0.200159265342"/>
   <xacro:add_joint_stator size_y="0" size_z="0.2" suffix="2"/>
   <xacro:add_joint effort="35" lower_lim="-3.14" pitch="-0.0" roll="0.0" suffix="2" upper_lim="3.14" velocity="5.7" x="0.0" y="0.0" yaw="0.0" z="0.2"/>
   <xacro:add_link size_y="0.2" size_z="0.2" suffix="2"/>
   <xacro:add_fixed_joint_stator pitch="-0.0" roll="-1.57" suffix="3" suffix_bis="2" x="0.0" y="0.199999936586" yaw="0.0" z="0.200159265342"/>
   <xacro:add_joint_stator size_y="0" size_z="0.2" suffix="3"/>
   <xacro:add_joint effort="35" lower_lim="-3.14" pitch="-0.0" roll="0.0" suffix="3" upper_lim="3.14" velocity="5.7" x="0.0" y="0.0" yaw="0.0" z="0.2"/>
   <xacro:add_link size_y="0.2" size_z="0.2" suffix="3"/>
   <xacro:add_fixed_joint pitch="-0.0" roll="-1.57" suffix="3" x="0.0" y="0.199999936586" yaw="0.0" z="0.200159265342"/>
   <xacro:add_link size_y="0.2" size_z="0.2" suffix="3_bis"/>
</robot>
